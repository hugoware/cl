

+template('dialog')
	.dialog-container
		.dialog

+template('dialog-create-project')
	.content(dialog-width='600').create-new-project
		.form
			label
				span name
				input.name
			
			label
				span description
				textarea.description

			ul
				li.type(data-type='web') Web
				li.type(data-type='code') Code
				//- li.type(data-type='web') Game 2D
				//- li.type(data-type='web') Game 3D

			ul
				li.language(data-type='javascript') JavaScript
				li.language(data-type='lua') Lua
				li.language(data-type='csharp') C#
				li.language(data-type='python') Python
				li.language(data-type='typescript') TypeScript

			.error

			.actions
				.action.confirm.primary Create Project
				.action.cancel Cancel


+template('dialog-rename-item')
	.content(dialog-width='600').rename-item
		.title Rename #[span.type]

		.message
			| Enter a new name for the selected #[span.type].

		.form
			.error
			.label #[span.type] Name
			.itemName

		.actions
			.action.confirm.primary Rename #[span.type]
			.action.cancel Cancel


+template('dialog-create-file')
	.content(dialog-width='700').create-new-file
		.title Create New File
		
		.message
			| This will create the new file in  
			.in-root the project root folder
			code.in-folder

		include _file-type-selector

		.form
			.error
			.label File Name
			.fileName

		.actions
			.action.confirm.primary Create File
			.action.cancel Cancel


+template('dialog-create-folder')
	.content(dialog-width='500').create-new-folder
		.title Create a New Folder
		.message
			| This will create a new folder in 
			.in-root the project root folder
			code.in-folder

		.form
			.error
			.label Folder Name
			.folderName

		.error

		.actions
			.action.confirm.primary Create Folder
			.action.cancel Cancel


+template('dialog-remove-items')
	.content(dialog-width='600').remove-items
		.title Remove #[span.type]
		.message This will delete the following #[span.type.lowercase] from your project.

		.selection

		.error

		.actions
			.action.confirm.danger Remove #[span.type]
			.action.cancel Cancel


+template('dialog-move-items')
	.content(dialog-width='600').move-items
		.title Move #[span.type]
		.message This will move the following #[span.type.lowercase]...

		.selection

		.message.alt ... to the folder selected below.
		.warn.with-icon.has-conflicts
			.icon(icon='warning')
			.detail Moving to this target folder will overwrite some files already there.
		.folder-selection Select a target folder to move the #[span.type.lowercase] to...

		.actions
			.action.confirm.primary Move #[span.type]
			.action.cancel Cancel


+template('dialog-move-items-item')
	.item
		.icon
		.label


+template('dialog-upload-files')
	.content(dialog-width='600').upload-files
		.title Upload Files
		.message Drag and drop the file you'd like to upload to this project
		.error

		.uploads

		.actions
			.action.cancel Close

+template('dialog-upload-file-item')
	.file-upload-item
		.info
			.activity
				.icon.warning(icon='warning')
				.icon.success(icon='success')
				.icon.failed(icon='error')
				.icon.active(icon='activity')

			.name

		.status
			.progress
				.total
					.current

		.action
			.error-message
			.detail There's another file with the same name
			.options
				.overwrite Overwrite
				.clear Cancel

+template('dialog-publish-project')
	.content(dialog-width='500').publish-project
		h3 Feature not available yet

		.actions
			.action.cancel Cancel

+template('dialog-remove-project')
	.content(dialog-width='500').edit-project
		.title Remove Project
		.message Do you really want to delete this project an all of its files?
		.error

		.actions
			.action.confirm.danger Remove Project
			.action.cancel Cancel

+template('dialog-edit-project')
	.content(dialog-width='500').edit-project
		h3 Feature not available yet

		.actions
			.action.cancel Cancel

+template('dialog-reset-lesson')
	.content(dialog-width='500').reset-lesson
		.title Reset Lesson
		.message Do you really want to reset this lesson an all of its files?
		.error

		.actions
