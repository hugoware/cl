
mixin file_type(type, name, category, preferredName)
	div(class='allow-file-type-'+ type)
		div(class='file-type file-type-'+ type + ' file-category-' + category category=category file-type=type file-name=preferredName)
			.icon(icon=type)
			.detail
				.name= name

mixin selected_file_type(type, name, category, description)
	div(class='file-selection file-type-'+ type)
		.cancel(icon='close')

		.icon(icon=type)
		.detail
			.name= name
			.description= description

mixin category_type(category, name)
	div(class='category category-'+ category, category=category)= name

