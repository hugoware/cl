	body
		script(type='text/javascript').
			function showHelp() {
				$zopim.livechat.window.show();
			}
		
		#thankyou.container
			.row
				.col-md-6.col-md-offset-3.col-s-8.col-s-offset-2.col-xs-10.col-xs-offset-1
					.message
						a.back(href='/') Back to main

						.logo

						if result.success
							h1 Thank You!
							p You're enrolled and ready to start coming to CodeLab!

							.confirm
								dl
									dt Confirmation Number
									dd= result.subscriptionId

									dt Student Name
									dd= result.first + ' ' + result.last

									dt Selected Time
									//- dd Thursday @ 3:45
									dd= result.date

									dt.last Location
									dd.last 803 Cimmaron Suite 320 #[br]Irving, TX 75019

						else if result.status === 'already_registered'
							h2 Registration Complete
							p This enrollment has already been processed and accepted.

							.confirm
								dl
									dt Confirmation Number
									dd= result.subscriptionId

									dt Selected Time
									//- dd Thursday @ 3:45
									dd= result.date

									dt.last Location
									dd.last 803 Cimmaron Suite 320 #[br]Irving, TX 75019
					
						else
							h2 No Enrollment Found
							p It appears that nothing was found for this enrollment request.
							p &nbsp;
					
						.actions
							a.btn.btn-primary(onclick='showHelp()') Have questions?
							a.btn.btn-info(href='https://codelab.chargebeeportal.com/') Manage Enrollments


