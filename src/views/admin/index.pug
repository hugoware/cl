doctype
html
	head
		title Admin
		link(rel='stylesheet' type='text/css' href='/__codelab__/admin/index.css')

	body

		#success
			.message

		#error
			.source
			.message

		#dialogs
			#update-user.dialog
				.close
				textarea.as-code(user-update-data)
				input(type='hidden' user-update-id)
				button(apply-update) Update User

		#manage-user.module
			.title Manage User
			.content
				.controls
					input(field-search placeholder='search')
					button(find-user) Find User

			.results.list
				
		#create-user.module
			.title Create User
			.content
				.controls
					input(field-first-name placeholder='first name')
					input(field-last-name placeholder='last name')
					input(field-email placeholder='email')
					input(field-type placeholder='type' value='student')
					button(create-user) Create User


		#activity.module
			.title Activity #[em= `(${Object.keys(activity).length})`]
			.content
				for person in activity
					.activity
						.name= person.name
						ul.projects
							for project in person.projects
								li
									a(href=`https://${project.id}.codelabschool.com` target=person.id) #[span= project.name] #[em= `(${project.type})`]


	script(type='text/javascript' src='/__codelab__/admin.js')

	//- live reload access
	if !production
		script(type='text/javascript' src='http://localhost:35729/livereload.js?snipver=1')


